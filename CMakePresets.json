{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25
    },
    "configurePresets": [
        {
            "name": "gcc",
            "generator": "Ninja",
            "binaryDir": "build/gcc",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "arm-none-eabi-gcc",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "build/arm-none-eabi-gcc",
            "toolchainFile": "cmake/toolchains/arm-none-eabi-gcc.STM32H750.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "arm-none-eabi-gcc-dbg",
            "inherits": "arm-none-eabi-gcc",
            "binaryDir": "build/arm-none-eabi-gcc-dbg",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "arm-none-eabi-gcc-rel",
            "inherits": "arm-none-eabi-gcc",
            "binaryDir": "build/arm-none-eabi-gcc-rel",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "arm-none-eabi-gcc-dbg",
            "configurePreset": "arm-none-eabi-gcc-dbg"
        },
        {
            "name": "arm-none-eabi-gcc-rel",
            "configurePreset": "arm-none-eabi-gcc-rel"
        },
        {
            "name": "tests",
            "configurePreset": "gcc"
        }
    ],
    "testPresets": [
        {
            "name": "tests",
            "configurePreset": "gcc"
        }
    ],
    "workflowPresets": [
        {
            "name": "arm-none-eabi-gcc-dbg",
            "steps": [
                {
                    "type": "configure",
                    "name": "arm-none-eabi-gcc-dbg"
                },
                {
                    "type": "build",
                    "name": "arm-none-eabi-gcc-dbg"
                }
            ]
        },
        {
            "name": "arm-none-eabi-gcc-rel",
            "steps": [
                {
                    "type": "configure",
                    "name": "arm-none-eabi-gcc-rel"
                },
                {
                    "type": "build",
                    "name": "arm-none-eabi-gcc-rel"
                }
            ]
        },
        {
            "name": "tests",
            "steps": [
                {
                    "type": "configure",
                    "name": "gcc"
                },
                {
                    "type": "build",
                    "name": "tests"
                },
                {
                    "type": "test",
                    "name": "tests"
                }
            ]
        }
    ]
}
