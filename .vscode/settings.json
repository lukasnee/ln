{
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.formatting": "disabled",
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "cmake.buildDirectory": "${workspaceFolder}/build/arm-none-eabi-gcc-dbg",
    "cmake.useCMakePresets": "always",
    "cmake.ctest.testExplorerIntegrationEnabled": false, // we use matepek.vscode-catch2-test-adapter instead
    "clangd.enable": true,
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build/arm-none-eabi-gcc-dbg",
        "--query-driver=**", // clangd becomes aware of arm-none-eabi-gcc and its standard includes
        "--background-index",
        "--clang-tidy",
        "--completion-style=detailed"
    ]
}
